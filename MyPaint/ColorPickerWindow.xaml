<Window x:Class="MyPaint.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPaint"
        mc:Ignorable="d"
        Title="ColorPickerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="749*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Wybierz kolor:" Grid.Column="1" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="RValueTextBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,116,0,0" Text="000" TextWrapping="Wrap" Width="63" MaxLength="3" PreviewTextInput="RValueTextBox_PreviewTextInput" />
        <TextBox x:Name="GValueTextBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,146,0,0" Text="000" TextWrapping="Wrap" Width="63" />
        <TextBox x:Name="BValueTextBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,176,0,0" Text="000" TextWrapping="Wrap" Width="63" />
    </Grid>
</Window>
